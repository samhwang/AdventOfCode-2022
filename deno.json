{
  "compilerOptions": {
    "strict": true,
    "allowJs": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "tasks": {
    "fetch": "deno run --allow-read --allow-write --allow-net get-aoc-input/index.ts fetch"
  }
}
